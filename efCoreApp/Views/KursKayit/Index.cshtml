@model IEnumerable<KursKayit>
<h2>Öğrenci Listesi</h2>
<a asp-action="Create" asp-controller="KursKayit"  class="btn btn-primary">Kurs Kayıt </a>
<hr>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m=>m.KayitId)</th>
            <th>@Html.DisplayNameFor(m=>m.Ogrenci.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m=>m.Kurs.Baslik)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
             <tr>
                <td>@Html.DisplayFor(modelItem => item.KayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                <td>
                   <a asp-controller="KursKayit" asp-action="Edit" asp-route-id="@item.Kurs.KursId" class="btn btn-primary btn-sm">Edit</a>
                   <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.Kurs.KursId" class="btn btn-danger btn-sm">Delete</a>
                </td>
             </tr>
        }
    </tbody>
     
</table>